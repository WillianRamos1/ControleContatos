@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de Exclusão de Contato";
}

<div class="text-center">
    <h3>Realmente Deseja Apagar o Contato "@Model.Nome" ?</h3>
</div>

<a class="btn btn-primary btn-block" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Confirmar Exclusão</a>
<a class="btn btn-danger btn-block" asp-controller="Contato" asp-action="Index" role="button">Cancelar Exclusão</a>